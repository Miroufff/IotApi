{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Realm</th>
                <th>Username</th>
                <th>Password</th>
                <th>Credentials</th>
                <th>Challenges</th>
                <th>Email</th>
                <th>Emailverified</th>
                <th>Verificationtoken</th>
                <th>Status</th>
                <th>Created</th>
                <th>Lastupdated</th>
                <th>Idsensor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.realm }}</td>
                <td>{{ customer.username }}</td>
                <td>{{ customer.password }}</td>
                <td>{{ customer.credentials }}</td>
                <td>{{ customer.challenges }}</td>
                <td>{{ customer.email }}</td>
                <td>{% if customer.emailverified %}Yes{% else %}No{% endif %}</td>
                <td>{{ customer.verificationtoken }}</td>
                <td>{{ customer.status }}</td>
                <td>{% if customer.created %}{{ customer.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if customer.lastupdated %}{{ customer.lastupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ customer.idSensor }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
